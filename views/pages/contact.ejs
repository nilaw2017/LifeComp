<!DOCTYPE html>
<html lang="en">

<%- include("./../components/head.ejs") %>
<%- include("./../components/topbar.ejs") %>
<body>
    
    <div class="container">
        <!-- LET'S WORK TOGETHER -->
      <div class="pb-5">
        <div class="text-center title-box">
          <p>Contact Us</p>
          <h2>Keep In Touch</h2>
        </div>
        </div>
        <div class="contact-details mt-5">
          <form action="">
            <input type="text" name="name" id="name" placeholder="Your Name" />

            <input
              type="email"
              name="email"
              id="email"
              placeholder="Your Email Address"
            />

            <input
              type="text"
              name="pnumber"
              id="pnumber"
              placeholder="Your Phone Number"
            />

            <textarea
              name="message"
              id="message"
              rows="5"
              placeholder="Please Leave Your Message"
            ></textarea>
          </form>

          <div class="company-detail">
            <div class="d-flex gap-3 mb-3">
              <i class="fa-solid fa-location-dot"></i>
              <div>
                <h5 class="fw-bold">Location</h5>
                <h6>Kumaripati,Lalitpur </h6>
              </div>
            </div>

            <div class="d-flex gap-3 mb-3">
              <i class="fa-solid fa-phone"></i>
              <div>
                <h5 class="fw-bold">Phone</h5>
                <h6>9766459711</h6>
              </div>
            </div>

            <div class="d-flex gap-3 mb-3">
              <i class="fa-solid fa-envelope"></i>
              <div>
                <h5 class="fw-bold">Email</h5>
                <h6>lifetech@gmail.com</h6>
              </div>
            </div>
            <div class="d-flex gap-3 mb-3">
                <i class="fa-solid fa-clock"></i>
                <div>
                  <h5 class="fw-bold">Open Hours</h5>
                  <h6>Mon-Fri<br>10Am-5Pm</h6>
                </div>
              </div>     
          </div>
        </div>
        <button type="submit" class="btn btn-primary contact-us">Submit</button>        
      </div>

    </div>
    <%- include("./../components/footer.ejs") %>
    <script src="script.js"></script>
</body>
</html>